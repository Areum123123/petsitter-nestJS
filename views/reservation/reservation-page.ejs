<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>펫시터 예약</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
        color: #333;
      }
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
      }
      .form-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 30px;
      }

      .form-header {
        font-size: 2em;
        margin-bottom: 20px;
        text-align: center;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
      }
      .form-group input,
      .form-group textarea {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
      }
      .form-group input[type='date'] {
        padding: 7px;
      }
      .form-group textarea {
        height: 100px;
        resize: vertical;
      }
      .btn-submit {
        width: 100%;
        background-color: #4a90e2;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 1.1em;
        cursor: pointer;
        transition: background-color 0.3s;
        margin: 20px 0; /* 버튼과 다른 요소 사이에 여백 추가 */
      }
      .btn-submit:hover {
        background-color: #357abd;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="form-container">
        <div class="form-header">펫시터 예약</div>
        <form id="reservationForm">
          <input type="hidden" id="petSitterId" name="pet_sitter_id" />
          <div class="form-group">
            <label for="dogName">반려견 이름</label>
            <input type="text" id="dogName" name="dog_name" required />
          </div>
          <div class="form-group">
            <label for="dogBreed">반려견 품종</label>
            <input type="text" id="dogBreed" name="dog_breed" required />
          </div>
          <div class="form-group">
            <label for="dogAge">반려견 나이</label>
            <input type="text" id="dogAge" name="dog_age" required />
          </div>
          <div class="form-group">
            <label for="dogWeight">반려견 체중</label>
            <input type="text" id="dogWeight" name="dog_weight" required />
          </div>
          <div class="form-group">
            <label for="requestDetails">요청사항</label>
            <textarea id="requestDetails" name="request_details"></textarea>
          </div>
          <div class="form-group">
            <label for="bookingDate">예약 날짜</label>
            <input type="date" id="bookingDate" name="booking_date" required />
          </div>
          <button type="submit" class="btn-submit">예약하기</button>
        </form>
      </div>
    </div>
    <script>
      let accessToken = '';

      document.addEventListener('DOMContentLoaded', function () {
        fetchSessionData();
      });

      //세션에서 가져오기
      function fetchSessionData() {
        fetch('/api/session', {
          method: 'GET',
          credentials: 'include',
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.accessToken) {
              accessToken = data.accessToken;
            } else {
              console.error('No access token found in session');
              alert('로그인이 필요합니다.');
              window.location.href = '/api/auth/sign-in';
            }
          })
          .catch((error) => {
            console.error('Error fetching session data:', error);
            alert('세션 정보를 가져오는 중 문제가 발생했습니다.');
          });
      }

      //  펫시터 ID를 URL에서 가져오는 예시
      const urlParams = new URLSearchParams(window.location.search);
      const petSitterId = urlParams.get('pet_sitter_id');

      if (petSitterId) {
        document.getElementById('petSitterId').value = petSitterId;
      }

      // 폼 제출 이벤트 처리

      document
        .getElementById('reservationForm')
        .addEventListener('submit', function (event) {
          event.preventDefault();

          const formData = new FormData(this);

          fetch('/api/reservations', {
            method: 'POST',
            headers: {
              Authorization: `Bearer ${accessToken}`,
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(Object.fromEntries(formData)),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.status === 201) {
                alert(data.message);
                // 예약 완료 후 페이지 이동 또는 추가 처리
                window.location.href = '/'; //나중에 예약확인하는곳으로 넘기면 됨
              } else {
                alert('예약 실패: ' + data.message);
              }
            })
            .catch((error) => {
              console.error('Error:', error);
              alert('예약 처리 중 문제가 발생했습니다.');
            });
        });
    </script>
  </body>
</html>
