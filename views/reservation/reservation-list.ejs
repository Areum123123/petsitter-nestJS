<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>예약 관리</title>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      /* 스타일 설정 */
      body {
        font-family: 'Jua', sans-serif;
        background-color: #f8f9fa;
      }
      .container {
        padding: 40px 20px;
        max-width: 900px;
        margin: auto;
      }
      .reservation-item {
        background: white;
        padding: 20px;
        margin-bottom: 15px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .reservation-item h4 {
        margin: 0;
      }
      .reservation-item p {
        margin: 5px 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h2>내 예약 관리</h2>
      <div id="reservationList">
        <!-- 예약 데이터가 여기에 동적으로 렌더링됩니다. -->
      </div>
    </div>

    <script>
      let accessToken = '';

      document.addEventListener('DOMContentLoaded', function () {
        fetchSessionData();
      });

      // 세션에서 토큰 가져오기
      function fetchSessionData() {
        fetch('/api/session', {
          method: 'GET',
          credentials: 'include',
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.accessToken) {
              accessToken = data.accessToken;
              fetchReservations();
            } else {
              alert('로그인이 필요합니다.');
              window.location.href = '/api/auth/sign-in';
            }
          })
          .catch((error) => {
            console.error('세션 정보를 가져오는 중 오류 발생:', error);
          });
      }

      // 예약 정보 가져오기
      function fetchReservations() {
        fetch('/api/reservations', {
          method: 'GET',
          headers: {
            Authorization: `Bearer ${accessToken}`,
            'Content-Type': 'application/json',
          },
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error('네트워크 응답 오류');
            }
            return response.json();
          })
          .then((data) => {
            if (data.status === 200) {
              console.log('datatest1', data.data);
              displayReservations(data.data);
            } else {
              alert('예약 정보를 가져오는 데 실패했습니다.');
            }
          })
          .catch((error) => {
            console.error('예약 정보를 가져오는 중 오류 발생:', error);
          });
      }

      // 예약 정보 화면에 표시
      function displayReservations(reservations) {
        const reservationList = document.getElementById('reservationList');
        reservationList.innerHTML = '';

        if (reservations.length === 0) {
          reservationList.innerHTML = '<p>예약 정보가 없습니다.</p>';
          return;
        }

        reservations.forEach((reservation) => {
          const reservationItem = document.createElement('div');
          reservationItem.className = 'reservation-item';
          reservationItem.innerHTML = `
            <h4>예약 번호: ${reservation.reservation_id}</h4>
            <p>예약상태: ${reservation.status}</p>
            <p>반려견이름: ${reservation.pet_details.name}</p>
            <p>반려견 종: ${reservation.pet_details.breed}</p>
            <p>반려견 나이: ${reservation.pet_details.age}</p>
            <p>반려견 몸무게: ${reservation.pet_details.weight}</p>
            <p>요청 사항: ${reservation.pet_details.request_details}</p>
            <p>예약자</p>
            <p>보호자 이름: ${reservation.reservation_details.user_name}</p>
            <p>연락처: ${reservation.reservation_details.phone_number}</p>
            <p>주소: ${reservation.reservation_details.address}</p>
            <p>펫시터</p>
            <p>펫시터 이름: ${reservation.petsitter_details.name}</p>
            <p>펫시터 지역: ${reservation.petsitter_details.region}</p>
            <p>예약날짜: ${reservation.petsitter_details.booking_date}</p>
          `;
          reservationList.appendChild(reservationItem);
        });
      }
    </script>
  </body>
</html>
