    <style>
      @import url('https://fonts.googleapis.com/css2?family=Jua&display=swap');
      * {
        font-family: 'Jua', sans-serif;
        font-weight: 400;
        font-style: normal;
      }

      .container {
        margin-top: 20px;
      }

      .pet-sitter-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .pet-sitter-info {
        flex: 2;
        padding-right: 20px;
      }

      /* 펫시터 이름 */
      .pet-sitter-info h2 {
        font-size: 2rem;
        margin-bottom: 30px;
      }

      /* 펫시터 경력사항들 */
      .pet-sitter-info p {
        font-size: 1.75rem;
        margin-bottom: 10px;
      }

      .pet-sitter-image {
        flex: 1;
        text-align: center;
      }

      .pet-sitter-image img {
        max-width: 100%;
        height: 300px;
        object-fit: cover;
        border-radius: 10px;
      }

      .reviews-container {
        margin-top: 40px;
      }

      .review-card {
        margin-bottom: 20px;
        background-color: #ffffff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
      }

      .review-card small {
        color: #6c757d;
      }

      .star-rating {
        color: gold;
        font-size: 1.5rem;
        margin-left: 10px;
      }

      /* 상단메뉴 */
      /* 상단 글씨 크기 조정 */
      .nav-link {
        font-size: 18px; /* 글씨 크기 증가 */
        padding: 0.5rem 1rem; /* 메뉴 아이템의 패딩 조정 */
      }

      .custom-color {
        color: #4e9ef2;
        font-weight: bold; /* 글씨를 두껍게 */
      } /* 프로필버튼 */
      .profile-button {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: none;
        background-color: #4e9ef2; /* 버튼 배경색 */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }
      .profile-icon {
        width: 50%;
        height: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      .profile-icon svg {
        width: 100%;
        height: 100%;
        color: white; /* 아이콘 색상 */
      }
      .profile-button:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
      }

      .p-3 {
        margin-top: -17px;
      }
    </style>
  </head>
  <body>
