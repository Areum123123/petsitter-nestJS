      <div class="container">
        <div
          class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
        >
          <a
            href="/"
            class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none"
          >
            <svg
              class="bi me-2"
              width="40"
              height="32"
              role="img"
              aria-label="Bootstrap"
            >
              <use xlink:href="#bootstrap"></use>
            </svg>
          </a>

          <ul
            class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-start mb-md-0"
          >
            <li>
              <a
                href="/"
                style="margin-left: -7vw"
                class="nav-link px-4 text-secondary"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 512 512"
                  style="transform: translateX(-10px)"
                >
                  <!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                  <path
                    d="M226.5 92.9c14.3 42.9-.3 86.2-32.6 96.8s-70.1-15.6-84.4-58.5s.3-86.2 32.6-96.8s70.1 15.6 84.4 58.5zM100.4 198.6c18.9 32.4 14.3 70.1-10.2 84.1s-59.7-.9-78.5-33.3S-2.7 179.3 21.8 165.3s59.7 .9 78.5 33.3zM69.2 401.2C121.6 259.9 214.7 224 256 224s134.4 35.9 186.8 177.2c3.6 9.7 5.2 20.1 5.2 30.5l0 1.6c0 25.8-20.9 46.7-46.7 46.7c-11.5 0-22.9-1.4-34-4.2l-88-22c-15.3-3.8-31.3-3.8-46.6 0l-88 22c-11.1 2.8-22.5 4.2-34 4.2C84.9 480 64 459.1 64 433.3l0-1.6c0-10.4 1.6-20.8 5.2-30.5zM421.8 282.7c-24.5-14-29.1-51.7-10.2-84.1s54-47.3 78.5-33.3s29.1 51.7 10.2 84.1s-54 47.3-78.5 33.3zM310.1 189.7c-32.3-10.6-46.9-53.9-32.6-96.8s52.1-69.1 84.4-58.5s46.9 53.9 32.6 96.8s-52.1 69.1-84.4 58.5z"
                  />
                </svg>
                반려견 돌보미
              </a>
            </li>
            <li>
              <a
                href="/api/petsitters/reservation"
                class="nav-link px-4 text-secondary"
                >돌보미 예약</a
              >
            </li>
            <li>
              <a href="/api/petsitters" class="nav-link px-4 custom-color"
                >펫시터 소개</a
              >
            </li>
          </ul>

          <div class="text-end">
            <a href="/api/users/profile" class="profile-button">
              <div class="profile-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  fill="currentColor"
                  class="bi bi-person"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zM2 14s1-1.5 6-1.5S14 14 14 14H2zm6-13a4 4 0 1 1 0 8 4 4 0 0 1 0-8z"
                  />
                </svg>
              </div>
            </a>
          </div>
        </div>
      </div>
      <hr />
    </header>

    <div class="container">
      <div id="petSitterDetails" class="pet-sitter-container">
        <div class="pet-sitter-info">
          <h2 id="petSitterName"></h2>
          <p><strong>경력:</strong> <span id="experience"></span></p>
          <p><strong>지역:</strong> <span id="region"></span></p>
          <p><strong>자격증:</strong> <span id="certification"></span></p>
          <p>
            <strong>평점:</strong> <span id="totalRate"></span>
            <span id="starRating" class="star-rating"></span>
          </p>
        </div>
        <div class="pet-sitter-image">
          <img id="petSitterImage" src="" alt="펫시터 이미지" />
        </div>
      </div>
      <div id="reviewsContainer" class="reviews-container">
        <h3>리뷰</h3>
        <!-- 리뷰들이 여기에 추가됩니다. -->
      </div>
    </div>

    <script>
      // 현재 페이지 URL에서 petSitterId를 추출
      const pathSegments = window.location.pathname.split('/');
      const petSitterId = pathSegments[pathSegments.indexOf('petsitters') + 1];
      console.log('petSitterId', petSitterId);
      fetch(`/api/pet-sitters/${petSitterId}/details`)
        .then((response) => response.json())
        .then((data) => {
          if (data.status === 200) {
            renderPetSitterDetails(data.data[0]);
            renderReviews(data.data);
          }
        })
        .catch((error) => console.error('Error:', error));

      // 펫시터 정보 렌더링
      function renderPetSitterDetails(petSitter) {
        const rating = parseFloat(petSitter.total_rate);
        document.getElementById('petSitterName').textContent =
          petSitter.petSitterName;
        document.getElementById('experience').textContent =
          petSitter.experience;
        document.getElementById('region').textContent = petSitter.region;
        document.getElementById('certification').textContent =
          petSitter.certification;
        document.getElementById('totalRate').textContent = rating.toFixed(1);

        // 평점이 NaN인 경우 처리
        if (isNaN(rating)) {
          document.getElementById('totalRate').textContent = '평점이 없습니다';
          document.getElementById('starRating').innerHTML = ''; // 별점도 비워줍니다.
        } else {
          document.getElementById('totalRate').textContent = rating.toFixed(1);

          // 별점 렌더링
          const starRatingElement = document.getElementById('starRating');
          starRatingElement.innerHTML = getStarRatingHtml(rating);
        }

        document.getElementById('petSitterImage').src = petSitter.image_url;
      }

      function getStarRatingHtml(rating) {
        let starsHtml = '';
        const fullStars = Math.floor(rating);
        const halfStar = rating % 1 >= 0.5;
        const emptyStars = 5 - fullStars - (halfStar ? 1 : 0);

        // Full stars
        for (let i = 0; i < fullStars; i++) {
          starsHtml += '★';
        }

        // Half star
        if (halfStar) {
          starsHtml += '☆';
        }

        // Empty stars
        for (let i = 0; i < emptyStars; i++) {
          starsHtml += '☆';
        }

        return starsHtml;
      }

      // 리뷰 렌더링
      function renderReviews(reviews) {
        const reviewsContainer = document.getElementById('reviewsContainer');
        reviews.forEach((reviewData) => {
          const review = reviewData.reviewDetails;
          const reviewCard = document.createElement('div');
          reviewCard.classList.add('card', 'review-card');

          reviewCard.innerHTML = `
            <div class="d-flex w-100 align-items-center">
              <h5 class="mb-1">${review.userName}</h5>
              <span class="star-rating">${getStarRatingHtml(review.rating)}</span>
            </div>
            <p class="mb-1">${review.comment}</p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <p class="card-text"><small class="text-muted">작성일: ${new Date(
                review.createdAt,
              ).toLocaleDateString()}</small></p>
             
            </div>
          `;
          //리뷰 수정삭제 버튼 일단 보류
          // <button type="button" class="btn btn-primary btn-sm">수정</button>
          // <button type="button" class="btn btn-secondary btn-sm">삭제</button>
          reviewsContainer.appendChild(reviewCard);
        });
      }
    </script>
  </body>
</html>
